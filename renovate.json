{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "UTC",
  "schedule": ["at 8am on monday"],
  "prConcurrentLimit": 6,
  "rebaseWhen": "conflicted",
  "assignees": [],
  "reviewers": [],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Disable updates for all dependencies by default",
      "matchManagers": ["gomod"],
      "enabled": false
    },
    {
      "description": "GitHub Actions",
      "managers": [
        "github-actions"
      ]
    },
    {
      "description": "k6 core and ecosystem packages",
      "managers": ["gomod"],
      "matchPackageNames": [
        "go.k6.io/k6",
        "github.com/grafana/sobek",
        "github.com/grafana/k6build",
        "github.com/grafana/k6deps",
        "github.com/grafana/k6provider",
        "github.com/grafana/xk6-dashboard"
      ],
      "groupName": "k6 ecosystem",
      "enabled": true,
      "labels": ["dependencies", "k6-ecosystem"]
    },
    {
      "description": "DNS library - critical for functionality",
      "managers": ["gomod"],
      "matchPackageNames": [
        "github.com/miekg/dns"
      ],
      "groupName": "DNS library",
      "enabled": true,
      "labels": ["dependencies", "dns-library"]
    },
    {
      "description": "Testing dependencies",
      "managers": ["gomod"],
      "matchPackageNames": [
        "github.com/stretchr/testify",
        "github.com/testcontainers/testcontainers-go",
        "github.com/docker/go-connections"
      ],
      "groupName": "testing dependencies",
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch", "minor"],
      "labels": ["dependencies", "testing"]
    },
    {
      "description": "Other allowed Go dependencies",
      "managers": ["gomod"],
      "matchPackageNames": [
        "github.com/fatih/color",
        "github.com/google/uuid",
        "github.com/pkg/errors"
      ],
      "groupName": "other dependencies",
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch"],
      "labels": ["dependencies", "minor"]
    },
    {
      "description": "Go version updates",
      "managers": ["gomod"],
      "matchDepTypes": ["golang"],
      "enabled": true,
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "golang"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/workflows/.+\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_VERSION\\s*[=:]\\s*[\"']?(?<currentValue>.+?)[\"']?"
      ]
    }
  ],
  "ignoreDeps": [
    "buf.build/gen/go/gogo/protobuf/protocolbuffers/go",
    "buf.build/gen/go/prometheus/prometheus/protocolbuffers/go",
    "dario.cat/mergo",
    "github.com/Azure/go-ansiterm",
    "github.com/Masterminds/semver/v3",
    "github.com/Microsoft/go-winio",
    "github.com/PuerkitoBio/goquery",
    "github.com/andybalholm/cascadia",
    "github.com/cenkalti/backoff/v4",
    "github.com/cenkalti/backoff/v5",
    "github.com/cespare/xxhash/v2",
    "github.com/chromedp/cdproto",
    "github.com/chromedp/sysutil",
    "github.com/chzyer/readline",
    "github.com/containerd/errdefs",
    "github.com/containerd/errdefs/pkg",
    "github.com/containerd/log",
    "github.com/containerd/platforms",
    "github.com/cpuguy83/dockercfg",
    "github.com/davecgh/go-spew",
    "github.com/dgryski/go-rendezvous",
    "github.com/distribution/reference",
    "github.com/dlclark/regexp2",
    "github.com/docker/docker",
    "github.com/docker/go-units",
    "github.com/ebitengine/purego",
